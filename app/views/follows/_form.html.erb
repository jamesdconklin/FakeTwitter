<%# if current_user.follows?(user) %>
  <%#= button_to "Unfollow", user_follow_url(user), method: :delete %>
<%# else %>
   <%#= button_to "Follow", user_follow_url(user), method: :post %>
<%# end %>

<% followed = current_user.follows?(user) ? "followed" : "unfollowed" %>

<form class="" action="<%= user_follow_url(user) %>" method="post">
  <button type="submit" name="button" class="follow-toggle"
    data-initial-follow-state="<%= followed %>" data-user-id="<%= user.id %>">foo</button>

</form>
