<h2>New Tweet!</h2>
<form class="tweet-compose" action="/tweets" method="POST" data-tweets-ul="#feed">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">


  <label>
    Content
    <textarea name="tweet[content]"></textarea>
  </label>
  <strong class="chars-left"></strong>
  <br>
  <a class="add-mentioned-user" href="javascript:void(0)">Add Mention</a>

<div class="mentioned-user">
</div>

  <script id="mention-template" type="text/template">
    <div class="dummy-parent">
      <label>
        Mention
        <select name="tweet[mentioned_user_ids][]">
          <option></option>
          <% User.all.each do |user| %>
            <option value="<%= user.id %>"><%= user.username %></option>
          <% end %>
        </select>
      </label>
      <a class="remove-mentioned-user" href="javascript:void(0)">Remove</a>
    <br>
  </div>
</script>


  <input type="Submit" value="Post Tweet!">
</form>
